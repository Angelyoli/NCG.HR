@model NCG.HR.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "角色权限配置";
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">角色权限配置</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="AssignRights">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="RoleId" class="control-label"></label>
                                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
                                    <option value="">请选择需要配置的角色</option>
                                </select>
                                <span asp-validation-for="RoleId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="TaskId" class="control-label"></label>
                                <select asp-for="TaskId" class="form-control" asp-items="ViewBag.Tasks">
                                    <option value="">请选择需要配置的权限</option>
                                </select>
                                <span asp-validation-for="TaskId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="card-footer">
                                    <div class="clearfix">                                       
                                        <button type="submit"  class="btn btn-primary" ><i class="fa fa-plus"></i>配置权限</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>